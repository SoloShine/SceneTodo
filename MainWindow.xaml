<hc:Window
    x:Class="SceneTodo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:views="clr-namespace:SceneTodo.Views"
    xmlns:vm="clr-namespace:SceneTodo.ViewModels"
    Title="SceneTodo"
    Width="800"
    Height="450"
    Background="{DynamicResource RegionBrush}"
    WindowStartupLocation="CenterScreen">
    <hc:Window.Resources>
        <Style
            x:Key="menuButton"
            BasedOn="{StaticResource ButtonBaseStyle}"
            TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </hc:Window.Resources>
    <!--  主内容区域  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
            <!--  菜单  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <hc:SideMenu>
                        <hc:SideMenuItem Command="{Binding ShowTodoListPageCommand}" ToolTip="常规视图">
                            <hc:SideMenuItem.Icon>
                                <iconPacks:PackIconFontAwesome Kind="FaceSmileRegular" />
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        <hc:SideMenuItem Command="{Binding ShowCalendarViewCommand}" ToolTip="日历视图">
                            <hc:SideMenuItem.Icon>
                                <iconPacks:PackIconCircumIcons Kind="Calendar" />
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        <hc:SideMenuItem Command="{Binding ShowScheduledTasksCommand}" ToolTip="计划任务">
                            <hc:SideMenuItem.Icon>
                                <iconPacks:PackIconFontAwesome Kind="ClockRegular" />
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        <hc:SideMenuItem Command="{Binding ShowHistoryPageCommand}" ToolTip="历史记录">
                            <hc:SideMenuItem.Icon>
                                <iconPacks:PackIconMaterialDesign Kind="History" />
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                    </hc:SideMenu>
                </StackPanel>
                <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                    <hc:ContextMenuButton Style="{StaticResource menuButton}" ToolTip="设置">
                        <hc:ContextMenuButton.Content>
                            <iconPacks:PackIconVaadinIcons Kind="Cog" />
                        </hc:ContextMenuButton.Content>
                        <hc:ContextMenuButton.Menu>
                            <ContextMenu>
                                <MenuItem Command="{Binding ThemeSettingsCommand}" Header="主题设置">
                                    <MenuItem.Icon>
                                        <iconPacks:PackIconLucide Kind="Palette" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Command="{Binding ResetAppConfigCommand}" Header="重置配置">
                                    <MenuItem.Icon>
                                        <iconPacks:PackIconIonicons Kind="RefreshMD" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Command="{Binding ResetTodoCommand}" Header="重置数据">
                                    <MenuItem.Icon>
                                        <iconPacks:PackIconBoxIcons Kind="RegularReset" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </hc:ContextMenuButton.Menu>
                    </hc:ContextMenuButton>
                    <Button
                        Command="{Binding AboutCommand}"
                        Style="{StaticResource menuButton}"
                        ToolTip="帮助">
                        <Button.Content>
                            <iconPacks:PackIconLucide Kind="CircleHelp" />
                        </Button.Content>
                    </Button>
                </StackPanel>

            </Grid>


        </Border>
        <!-- 主内容区 - 使用 ContentControl 实现页面切换 -->
        <Grid Grid.Column="1">
            <ContentControl Content="{Binding CurrentContent}" />
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <!--  标签管理面板  -->
                <RowDefinition Height="*"/>
                <!--  时钟小组件  -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标签管理面板 -->
            <views:TagsPanelControl Grid.Row="0" 
                                   x:Name="TagsPanel"
                                   TagFilterRequested="TagsPanel_TagFilterRequested"/>

            <!-- 时钟小组件 -->
            <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                <Viewbox MaxWidth="200">
                    <hc:FlipClock Margin="32" />
                </Viewbox>
            </StackPanel>
        </Grid>

    </Grid>
</hc:Window>
