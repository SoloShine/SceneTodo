<UserControl
    x:Class="SceneTodo.Views.TodoItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SceneTodo.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SceneTodo.Models"
    xmlns:vm="clr-namespace:SceneTodo.ViewModels"
    d:DesignHeight="50"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:AppPathToIconConverter x:Key="AppPathToIconConverter" />
        <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
        <converters:PriorityToBorderBrushConverter x:Key="PriorityToBorderBrushConverter" />
    </UserControl.Resources>

    <Border
        x:Name="ItemBorder"
        BorderBrush="{Binding Priority, Converter={StaticResource PriorityToBorderBrushConverter}}"
        BorderThickness="2"
        CornerRadius="3"
        Padding="5">
        
        <!--  å³é”®èœå•  -->
        <Border.ContextMenu>
            <ContextMenu>
                <!--  ç¼–è¾‘  -->
                <MenuItem 
                    Header="ç¼–è¾‘(_E)"
                    Command="{Binding Source={StaticResource MainViewModel}, Path=EditTodoItemCommand}"
                    CommandParameter="{Binding}">
                    <MenuItem.Icon>
                        <Path Data="{StaticResource SearchGeometry}" 
                              Fill="{DynamicResource PrimaryTextBrush}"
                              Width="14" Height="14"
                              Stretch="Uniform"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <!--  æ·»åŠ å­é¡¹  -->
                <MenuItem 
                    Header="æ·»åŠ å­é¡¹(_A)"
                    Command="{Binding Source={StaticResource MainViewModel}, Path=AddTodoItemCommand}"
                    CommandParameter="{Binding}">
                    <MenuItem.Icon>
                        <Path Data="{StaticResource AddGeometry}" 
                              Fill="{DynamicResource PrimaryTextBrush}"
                              Width="14" Height="14"
                              Stretch="Uniform"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <Separator/>
                
                <!--  å¼ºåˆ¶å”¤èµ·è½¯ä»¶ï¼ˆä»…è½¯ä»¶å¾…åŠžï¼‰  -->
                <MenuItem 
                    Header="å¼ºåˆ¶å”¤èµ·è½¯ä»¶(_L)"
                    Command="{Binding Source={StaticResource MainViewModel}, Path=ForceLaunchCommand}"
                    CommandParameter="{Binding}"
                    Visibility="{Binding AppPath, Converter={StaticResource String2VisibilityConverter}}">
                    <MenuItem.Icon>
                        <Path Data="{StaticResource EyeOpenGeometry}" 
                              Fill="{DynamicResource PrimaryTextBrush}"
                              Width="14" Height="14"
                              Stretch="Uniform"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <!--  æ³¨å…¥å¼€å…³ï¼ˆä»…è½¯ä»¶å¾…åŠžï¼‰  -->
                <MenuItem 
                    Header="{Binding IsInjected, Converter={StaticResource InjectedToTextConverter}}"
                    Command="{Binding Source={StaticResource MainViewModel}, Path=ToggleIsInjectedCommand}"
                    CommandParameter="{Binding}"
                    Visibility="{Binding AppPath, Converter={StaticResource String2VisibilityConverter}}">
                    <MenuItem.Icon>
                        <Path Data="{StaticResource SuccessGeometry}" 
                              Fill="{Binding IsInjected, Converter={StaticResource InjectedToColorConverter}}"
                              Width="14" Height="14"
                              Stretch="Uniform"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <Separator Visibility="{Binding AppPath, Converter={StaticResource String2VisibilityConverter}}"/>
                
                <!--  åˆ é™¤  -->
                <MenuItem 
                    Header="åˆ é™¤(_D)"
                    Command="{Binding Source={StaticResource MainViewModel}, Path=DeleteTodoItemCommand}"
                    CommandParameter="{Binding}">
                    <MenuItem.Icon>
                        <Path Data="{StaticResource DeleteFillCircleGeometry}" 
                              Fill="{DynamicResource DangerBrush}"
                              Width="14" Height="14"
                              Stretch="Uniform"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Border.ContextMenu>
        
        <Grid
            x:Name="RootGrid"
            MinHeight="40"
            HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <!--  å¤é€‰æ¡†  -->
                <ColumnDefinition Width="Auto" />
                <!--  å›¾æ ‡  -->
                <ColumnDefinition Width="Auto" />
                <!--  ä¸»å†…å®¹åŒºåŸŸ  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  ç¬¬ä¸€è¡Œï¼šä¸»è¦ä¿¡æ¯  -->
            <!--  å¤é€‰æ¡†  -->
            <CheckBox
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                BorderBrush="Black"
                BorderThickness="1"
                Command="{Binding Source={StaticResource MainViewModel}, Path=ToggleIsCompletedCommand}"
                CommandParameter="{Binding}"
                IsChecked="{Binding IsCompleted}" />

            <!--  æ˜¾ç¤ºåº”ç”¨ç¨‹åºå›¾æ ‡  -->
            <Image
                Grid.Row="0"
                Grid.Column="1"
                Width="20"
                Height="20"
                Margin="5,0"
                VerticalAlignment="Center"
                Source="{Binding AppPath, Converter={StaticResource AppPathToIconConverter}}"
                Visibility="{Binding AppPath, Converter={StaticResource String2VisibilityConverter}}" />

            <!--  ä¸»å†…å®¹åŒºåŸŸ  -->
            <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Center">
                <!--  å†…å®¹å’Œæ ‡ç­¾  -->
                <StackPanel Orientation="Horizontal">
                    <!--  å¾…åŠžå†…å®¹  -->
                    <TextBlock
                        x:Name="ContentTextBlock"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                        Text="{Binding Content}" />
                    
                    <!--  æ ‡ç­¾åˆ—è¡¨  -->
                    <ItemsControl
                        ItemsSource="{Binding Tags}"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,5,0"
                                    Padding="6,2"
                                    Background="{Binding ColorBrush}"
                                    CornerRadius="10"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding Name}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!--  ä¼˜å…ˆçº§æ ‡ç­¾  -->
                    <Border
                        Margin="10,0,0,0"
                        Padding="6,2"
                        Background="{Binding Priority, Converter={StaticResource PriorityToBorderBrushConverter}}"
                        CornerRadius="3"
                        VerticalAlignment="Center">
                        <TextBlock
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding Priority, Converter={StaticResource EnumToDescriptionConverter}}" />
                    </Border>
                    
                    <!--  å­é¡¹æ•°é‡æ ‡ç­¾  -->
                    <Border
                        Margin="5,0,0,0"
                        Padding="6,2"
                        Background="{DynamicResource InfoBrush}"
                        CornerRadius="3"
                        VerticalAlignment="Center"
                        Visibility="{Binding SubItems.Count, Converter={StaticResource Int2VisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontSize="11"
                                Foreground="White"
                                Text="ðŸ“‹ " />
                            <TextBlock
                                FontSize="11"
                                Foreground="White"
                                Text="{Binding SubItems.Count}" />
                        </StackPanel>
                    </Border>
                    
                    <!--  æ³¨å…¥çŠ¶æ€æŒ‡ç¤ºå™¨ï¼ˆä»…è½¯ä»¶å¾…åŠžï¼‰  -->
                    <Border
                        Margin="5,0,0,0"
                        Padding="6,2"
                        Background="{Binding IsInjected, Converter={StaticResource InjectedToColorConverter}}"
                        CornerRadius="3"
                        VerticalAlignment="Center"
                        Visibility="{Binding AppPath, Converter={StaticResource String2VisibilityConverter}}"
                        ToolTip="{Binding IsInjected, Converter={StaticResource InjectedToTextConverter}}">
                        <TextBlock
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding IsInjected, Converter={StaticResource InjectedToTextConverter}}" />
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!--  ç¬¬äºŒè¡Œï¼šæ—¶é—´ä¿¡æ¯å’Œå…³è”æ“ä½œ  -->
            <Grid 
                Grid.Row="1" 
                Grid.Column="2"
                Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!--  å·¦ä¾§ï¼šæ—¶é—´ä¿¡æ¯  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!--  æˆªæ­¢æ—¶é—´ï¼ˆæ–°å¢žï¼Œä¼˜å…ˆæ˜¾ç¤ºï¼‰  -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0" 
                               Visibility="{Binding DueDate, Converter={StaticResource NullableToVisibilityConverter}}">
                        <TextBlock
                            FontSize="11"
                            Foreground="{Binding IsOverdue, Converter={StaticResource OverdueToBrushConverter}}"
                            Text="ðŸ“… " />
                        <TextBlock
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="{Binding IsOverdue, Converter={StaticResource OverdueToBrushConverter}}"
                            Text="{Binding DueDateDisplay}" />
                    </StackPanel>
                    
                    <!--  å¼€å§‹æ—¶é—´  -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0" 
                               Visibility="{Binding StartTime, Converter={StaticResource NullableToVisibilityConverter}}">
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Text="ðŸ• å¼€å§‹: " />
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Text="{Binding StartTime, Converter={StaticResource DateTimeToStringConverter}}" />
                    </StackPanel>
                    
                    <!--  ç»“æŸæ—¶é—´  -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0"
                               Visibility="{Binding EndTime, Converter={StaticResource NullableToVisibilityConverter}}">
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Text="ðŸ• ç»“æŸ: " />
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Text="{Binding EndTime, Converter={StaticResource DateTimeToStringConverter}}" />
                    </StackPanel>
                    
                    <!--  æé†’æ—¶é—´  -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0"
                               Visibility="{Binding ReminderTime, Converter={StaticResource NullableToVisibilityConverter}}">
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource WarningBrush}"
                            Text="â° æé†’: " />
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource WarningBrush}"
                            Text="{Binding ReminderTime, Converter={StaticResource DateTimeToStringConverter}}" />
                    </StackPanel>
                    
                    <!--  æ›´æ–°æ—¶é—´  -->
                    <StackPanel Orientation="Horizontal"
                               Visibility="{Binding UpdatedAt, Converter={StaticResource NullableToVisibilityConverter}}">
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource ThirdlyTextBrush}"
                            Text="ðŸ“ æ›´æ–°: " />
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource ThirdlyTextBrush}"
                            Text="{Binding UpdatedAt, Converter={StaticResource DateTimeToStringConverter}}" />
                    </StackPanel>
                </StackPanel>
                
                <!--  å³ä¾§ï¼šå…³è”æ“ä½œæŒ‰é’®  -->
                <ItemsControl
                    Grid.Column="1"
                    ItemsSource="{Binding LinkedActions}"
                    VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Content="{Binding DisplayName}"
                                Command="{Binding Source={StaticResource MainViewModel}, Path=ExecuteLinkedActionCommand}"
                                CommandParameter="{Binding}"
                                Margin="2,0"
                                Padding="5,2"
                                FontSize="11"
                                ToolTip="{Binding ActionTarget}"
                                Style="{StaticResource ButtonPrimary}"
                                hc:BorderElement.CornerRadius="3" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
